<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_author"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/icon_author_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_author"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/icon_heart"
        android:paddingTop="12dp"
        android:text="11111123231232132132131312313"
        android:textSize="30sp" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/icon_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="{fa-heart}"
        android:textSize="70sp" />

    <LinearLayout
        android:id="@+id/ll_group_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_parent_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="parent | "
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_child_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="child"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="1111/11/11"
        android:textSize="25sp" />
</RelativeLayout>